<%layout ("layouts/boilerplate")%>
 <div class="row">
     <h1 class="text-center">New Place</h1>
     <div class="col-6 offset-3">
            <form action="/places" method="POST" novalidate class="validated-form" enctype="multipart/form-data"> 
                <div class="mb-3">
                    <label class='form-label' for="title">Title </label>
                    <input class='form-control' type="text" id="title" name="title" placeholder="enter title" required>
                </div>
                <div class="mb-3">
                    <label class='form-label' for="location">Location </label>
                    <input class='form-control' type="text" id="location" name="location" placeholder="enter location" required>
                </div>
                
                <div class="input-group mb-3">
                    <input class="form-control" type="file" name="image" id="image" required multiple>
                </div>

                <div class="mb-3">
                    <label class='form-label' for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-addon1">$</span>
                        <input type="text" class="form-control" placeholder="0.00" aria-label="Username" id="price" name="price"
                            aria-describedby="price-addon1" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label class='form-label' for="description">Description </label>
                    <textarea class='form-control' type="text" id="description" name="description" rows="10" style="resize: none;" required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Add New Places</button>
                </div>
                <footer>
                    <a href="/places">All Places</a>
                </footer>
            </form>
     </div>
 </div>